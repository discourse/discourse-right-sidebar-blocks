<h3 class="top-contributors-heading">
  {{theme-i18n "top_contributors.heading"}}
</h3>

<div class="top-contributors--container">
  {{#each topContributors as |item|}}
    <div class="top-contributors--user">
      <span
        data-user-card={{item.user.username}}
        class="top-contributors--user-badge"
      >
        {{avatar item.user imageSize="small"}}
        {{html-safe item.user.username}}
      </span>
      <span class={{concat "top-contributors--user-likes order--" this.order}}>
        {{#if (eq this.order "likes_received")}}
          {{d-icon "heart"}}
          {{item.likes_received}}
        {{else}}
          {{d-icon "heart"}}
          {{item.likes_given}}
        {{/if}}
      </span>
    </div>
  {{/each}}
</div>

<a
  class="top-contributors--view-all"
  href={{this.viewAllUrl}}
>
  {{theme-i18n "top_contributors.view_all"}}
</a>